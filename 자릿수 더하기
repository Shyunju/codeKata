using System;

public class Solution {
    public int solution(int n) {
        int ten =1;
        int answer = 0;
        for(int i =0; i < 9 ; i++){
            if( n / ten == 0){
                break;
            }else{
                ten *= 10;
            }
        }
        ten = ten / 10;
        while( n != 0){
            answer += n / ten;
            n = n % ten;
            ten = ten / 10;
        }
        
        return answer;
    }
}
